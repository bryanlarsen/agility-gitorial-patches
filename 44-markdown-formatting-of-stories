--- a/app/models/story.rb
+++ b/app/models/story.rb
@@ -4,7 +4,7 @@ class Story < ActiveRecord::Base
 
   fields do
     title  :string
-    body   :text
+    body   :markdown # or :textile
     timestamps
   end
 
